model
(
  name "forklift"
  color "orange"
  size [ 1.5 1.0 1.0 ]
  pose [ 16.0 12.5 0.0 180.0 ]
  origin [ -0.5 0.0 0.0 0.0 ]
  stack_children 0

  model
  (
    color "grey30"
