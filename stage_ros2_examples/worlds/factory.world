  (
    color "grey30"
    size [ 1.0 0.15 0.02 ]
    pose [ 1.25 0.3 0.1 0.0 ]
    origin [ -0.5 0.0 0.0 0.0 ]
  )
)

define lidar ranger
(
  sensor
  (
    range [ 0.5 20.0 ]
    fov 270.0
    samples 818
  )

  color "black"
  size [ 0.06 0.15 0.03 ]
)

define agv position
(
  color "gold"
  size [ 1.2 0.9 0.3 ]
  stack_children 0

  drive "diff"
  # [ xmin xmax ymin ymax zmin zmax amin amax ]
  velocity_bounds [-5 5 0 0 0 0 -90 90 ]
  acceleration_bounds [-1 1 -1 1 -1 1 -90 90]
  odom_error [0.03 0.03 999999 999999 999999 0.02]

  lidar
  (
    name "lidar_front"
    pose [ 0.6 0.45 0.25 45.0 ]
  )

  lidar
  (
    name "lidar_back"
    pose [ -0.6 -0.45 0.25 -135.0 ]
  )
)

agv(
  name "agv_0"
  pose [ 10.0 8.5 0.0 90.0 ]
)

agv(
  name "agv_1"
  pose [ 10.0 6.5 0.0 90.0 ]
)
