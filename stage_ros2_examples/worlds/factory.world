resolution 0.02  # resolution of the underlying raytrace model in meters
interval_sim 50  # simulation timestep in milliseconds

window
(
  size [ 1100 768 ]

  # GUI options:
  show_data 0
  show_ranger_fov 0

  # camera options:
  center [ 10.000 7.500 ]
  rotate [ 0.000 0.000 ]
  scale 40.000
)

model
(
  name "floor_plan"
  color "gray20"
  size [ 20.000 15.000 2.000 ]
  pose [ 10.000 7.500 0.000 0.000 ]
  boundary 0
  gui_nose 0
  gui_grid 0
  gui_move 0
  gui_outline 0
  bitmap "factory_floor_plan.png"
)

model
(
  name "conveyor"
  color "gray30"
  size [ 0.8 14.0 0.1 ]
  pose [ 2.0 7.5 0.1 0.0 ]
  #gui_move 0
)

